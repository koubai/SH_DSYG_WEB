<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE struts PUBLIC 
    "-//Apache Software Foundation//DTD Struts Configuration 2.0//EN" 
    "http://struts.apache.org/dtds/struts-2.0.dtd">
<struts>

	<package name="home" extends="struts-default, json-default" namespace="/home">
	
		<action name="goHomeAction" class="homeAction" method="goHomeAction">
			<result name="success">/page/home/home.jsp</result>
		</action>
		
		<action name="showCompanyInfoAction" class="homeAction" method="showCompanyInfoAction">
			<result name="success">/page/home/companyinfo.jsp</result>
		</action>
		
		<action name="showCompanyDistributionAction" class="homeAction" method="showCompanyDistributionAction">
			<result name="success">/page/home/distribution.jsp</result>
		</action>
		
		<action name="showCompanyHistoryAction" class="homeAction" method="showCompanyHistoryAction">
			<result name="success">/page/home/history.jsp</result>
		</action>
		
		<action name="showCompanySpeechAction" class="homeAction" method="showCompanySpeechAction">
			<result name="success">/page/home/speech.jsp</result>
		</action>
		
		<action name="showCompanyNewAction" class="homeAction" method="showCompanyNewAction">
			<result name="success">/page/home/companynews.jsp</result>
		</action>
		
		<action name="showNewsDetailAction" class="homeAction" method="showNewsDetailAction">
			<result name="success">/page/home/newsdetail.jsp</result>
		</action>
		
	</package>

</struts>